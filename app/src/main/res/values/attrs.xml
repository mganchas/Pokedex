<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ButtonCircle">
        <attr name="image" format="reference" />
        <attr name="imageTint" format="color" />

        <attr name="backColor" format="enum">
            <enum name="primary" value="0"/>
            <enum name="secondary" value="1"/>
            <enum name="disabled" value="2"/>
        </attr>

        <attr name="size" format="enum">
            <enum name="small" value="0"/>
            <enum name="smalldium" value="1"/>
            <enum name="medium" value="2"/>
            <enum name="big" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="PokemonStatsItem">
        <attr name="statImage" format="reference" />
        <attr name="statName" format="string" />
        <attr name="statValue" format="string" />
        <attr name="statBackColor" format="enum">
            <enum name="hp" value="0"/>
            <enum name="attack" value="1"/>
            <enum name="specialAttack" value="2"/>
            <enum name="defense" value="3"/>
            <enum name="specialDefense" value="4"/>
            <enum name="speed" value="5"/>
        </attr>
    </declare-styleable>
</resources>